{
    "name": "next-shop",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "generate": "graphql-codegen -r dotenv/config -c codegen.yml dotenv_config_path=./.env.local",
        "format": "prettier --write ./**/*.{js,jsx,ts,tsx}",
        "lint": "eslint ./**/*.{js,jsx,ts,tsx}",
        "lint:fix": "yarn lint -- --fix"
    },
    "lint-staged": {
        "*.{html,md,mdx,ts,tsx,js,jsx,json,yml}": [
            "yarn lint:fix",
            "yarn format",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "@ant-design/icons": "^4.2.1",
        "@apollo/react-components": "^3.1.5",
        "@apollo/react-hoc": "^3.1.5",
        "@apollo/react-hooks": "^3.1.5",
        "@auth0/nextjs-auth0": "^0.13.0",
        "antd": "^4.3.4",
        "apollo-cache-inmemory": "^1.6.6",
        "apollo-client": "^2.6.10",
        "apollo-link-context": "^1.0.20",
        "apollo-link-http": "^1.5.17",
        "dotenv": "^8.2.0",
        "graphcms-image": "^1.1.0-beta4",
        "graphql": "^15.1.0",
        "graphql-tag": "^2.10.3",
        "lodash": "^4.17.15",
        "moment": "^2.27.0",
        "next": "9.4.4",
        "pluralize": "^8.0.0",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-ellipsis-text": "^1.2.1",
        "react-markdown": "^4.3.1",
        "styled-components": "^5.1.1"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "1.15.4",
        "@graphql-codegen/typescript": "1.15.4",
        "@graphql-codegen/typescript-operations": "1.15.4",
        "@graphql-codegen/typescript-react-apollo": "1.15.4",
        "@types/node": "^14.0.13",
        "@types/react": "^16.9.37",
        "@typescript-eslint/eslint-plugin": "^3.3.0",
        "@typescript-eslint/parser": "^3.3.0",
        "babel-plugin-graphql-tag": "^2.5.0",
        "babel-plugin-styled-components": "^1.10.7",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.0",
        "eslint-plugin-react-hooks": "^4.0.4",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "typescript": "^3.9.5"
    }
}
